<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inheritance.InheritanceCalenderAddSchedulePopupActivity">
    <Spinner
        android:id="@+id/spinnerEmployeeName"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="20dp">
    </Spinner>

    <Spinner
        android:id="@+id/spinnerDate"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/spinnerEmployeeName">
    </Spinner>

    <TextView
        android:id="@+id/textStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작시간"
        android:layout_below="@+id/spinnerEmployeeName"
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <Spinner
        android:id="@+id/spinnerHour1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/textStartTime">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="30dp"
        android:layout_below="@id/textStartTime"
        android:layout_toRightOf="@+id/spinnerHour1"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:id="@+id/spinnerMinute1"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/spinnerHour1"
        android:layout_below="@+id/textStartTime">
    </Spinner>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마감시간"
        android:layout_below="@+id/spinnerHour1"
        android:textSize="20dp"
        android:layout_margin="20dp"/>

    <Spinner
        android:id="@+id/spinnerHour2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/text2">
    </Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="30dp"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@+id/spinnerHour1"
        android:layout_marginTop="20dp"/>
    <Spinner
        android:id="@+id/spinnerMinute2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@+id/spinnerHour2"
        android:layout_below="@+id/text2">
    </Spinner>

    <Button
        android:id="@+id/btnAddTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerMinute2"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="시간 추가"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:background="#232434"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/edt1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/btnAddTime"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt1">
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_weight="1"
            android:layout_margin="20dp"/>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:layout_weight="1"
            android:layout_margin="20dp" />
    </LinearLayout>


</RelativeLayout>