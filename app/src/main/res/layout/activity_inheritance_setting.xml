<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inheritance.InheritanceSettingActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:background="@drawable/btn_go_back"
        android:scaleX="0.3"
        android:scaleY="0.5"
        android:layout_marginTop="13dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#315A7B"
            android:gravity="center"
            android:padding="20dp"
            android:text="Setting"
            android:textColor="#ffff"
            android:textSize="30dp" />

        <Button
            android:text="계정 정보변경"
            android:textColor="#ffff"
            android:id="@+id/btn_setting_Edit"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#315A7B"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />


        <Button
            android:text="알람 설정"
            android:textColor="#ffff"
            android:id="@+id/btn_setting_Notice"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#315A7B"
            android:layout_gravity="center"
            />

        <Button
            android:text="시급 및 월급 관리"
            android:textColor="#ffff"
            android:id="@+id/btn_setting_Paycheck"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#315A7B"
            android:layout_gravity="center"
            android:layout_margin="30dp"
            />
        <Button
            android:text="버전 정보"
            android:textColor="#ffff"
            android:id="@+id/btn_setting_Version"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#315A7B"
            android:layout_gravity="center" />

        <Button
            android:text="로그아웃"
            android:textColor="#ffff"
            android:id="@+id/btn_setting_Logout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="#315A7B"
            android:layout_gravity="center"
            android:layout_margin="30dp"/>
    </LinearLayout>
</RelativeLayout>