<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/border_all">

    <ImageView
        android:id="@+id/ivAccountFemale"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/img_account_male"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_centerInParent="true"
        android:background="#5C5C5C"
        android:layout_toEndOf="@+id/ivAccountFemale"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/tvItemInheritanceCompanyListName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기업 이름(지점)"
        android:textSize="20sp"
        android:layout_above="@+id/viewLine"
        android:layout_toEndOf="@+id/ivAccountFemale"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="6dp"
        android:paddingStart="5dp"/>

    <TextView
        android:id="@+id/tvItemInheritanceCompanyListAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기업 위치"
        android:textSize="15sp"
        android:layout_below="@+id/viewLine"
        android:layout_toEndOf="@+id/ivAccountFemale"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:paddingStart="15dp"/>

</RelativeLayout>
