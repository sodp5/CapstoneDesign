<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinInActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relTitleSetting"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorStatusJoinIn">

        <ImageButton
            android:id="@+id/ibtnJoinInGoBack"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/btn_go_back"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ibtnJoinInGoBack"
            android:layout_marginStart="40dp"
            android:text="회원가입"
            android:layout_centerVertical="true"
            android:textColor="@color/colorTextWhite"
            android:textSize="22sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="아이디"
                android:textSize="20dp"
                android:layout_weight="1.2"
                android:layout_margin="10dp"
                android:gravity="center"
                />

            <EditText
                android:id="@+id/edtID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0.8"
                android:hint="아이디"
                />
            <Button
                android:id="@+id/btnCheckID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#323449"
                android:layout_weight="1.2"
                android:layout_margin="10dp"
                android:text="중복확인"
                android:textColor="#ffff"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="비밀번호"
                android:textSize="20dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="비밀번호"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:maxLength="10"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="비밀번호 확인"
                android:textSize="20dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:gravity="center" />

            <EditText
                android:id="@+id/edtPasswordConfirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="비밀번호 확인"
                android:layout_weight="1"
                android:layout_margin="10dp"/>

            0    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="이름"
                android:textSize="20dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edtUserName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="이름"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="전화번호"
                android:textSize="20dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                android:gravity="center"/>
            <EditText
                android:id="@+id/edtTel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="전화번호"
                android:layout_weight="1"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/spinnerWrapperBank"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="3.5"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_spinner_big"
                    android:scaleType="fitXY" />

                <Spinner
                    android:id="@+id/spinnerBank"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"/>

            </FrameLayout>

            <EditText
                android:id="@+id/edtAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:hint="계좌번호" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="생년월일"
                android:textSize="20dp"
                android:layout_weight="3"
                android:layout_margin="10dp"
                />
            <EditText
                android:id="@+id/edtBirth"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="생년월일"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:text="성별"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:gravity="center"/>

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.755"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rgMale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="남자"/>

                <RadioButton
                    android:id="@+id/rgFemale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="여자"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:text="회원구분"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:gravity="center"/>

            <RadioGroup
                android:id="@+id/radioMemberClassification"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.755"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rgInheritance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="기업"/>

                <RadioButton
                    android:id="@+id/rgEmployee"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:text="직원"/>
            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/btnJoin"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="18sp"
            android:textColor="#ffff"
            android:layout_gravity="center"
            android:background="#323449"
            android:layout_margin="15dp"/>
    </LinearLayout>
</LinearLayout>